@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Video>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "Master.cshtml";
}
    <!--Ausgabe des jeweiligen Videos.
    Beinhaltet das Thumbnail und die Videodatei-->
    <div class="container contentBox">
        @Html.Partial("header")
        <hr>
        <div class="row">
            <video controls poster="@Model.Thumbnail.Url" width="100%">
                <source src="@Model.Videodata.Url" type="video/mp4"/>
            </video>
        </div>
    </div>
